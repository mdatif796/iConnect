<link rel="stylesheet" href="/css/home.css">
<h1> <%= title %> </h1>

<% if(locals.user){ %>
    <div id="post-section">
        <form action="/posts/create-post" method="post">
            <h1>Post</h1>
            <textarea name="content" id="content" cols="30" rows="3" placeholder="Type here ..." required></textarea>
            <input type="submit">
        </form>
    </div>   
    <div id="posts-list-container">
        <% for(post of posts){ %>
            <div class="post-list">
                <h1><%= post.content %> </h1>
                <p><%= post.user.name %> </p>
            </div>
        <% } %> 
    </div>
<% } %> 

