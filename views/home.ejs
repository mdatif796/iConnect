<link rel="stylesheet" href="/css/home.css">
<h1> <%= title %> </h1>

<% if(locals.user){ %>
    <div id="post-section">
        <form action="/posts/create-post" method="post">
            <h1>Post</h1>
            <textarea name="content" id="content" cols="30" rows="3" placeholder="Type here ..." required></textarea>
            <input type="submit" value="Add Post">
        </form>
    </div>  
<% } %>  
    <div id="posts-list-container">
        <% for(post of posts){ %>
            <div class="post-list">
                <h1><%= post.content %> </h1>
                <p><%= post.user.name %> </p>
            <% if(locals.user){ %> 
                <div class="post-comment">
                    <form action="/comments/create" method="post">
                        <input type="text" name="content" required placeholder="Type Here your comments...">
                        <input type="hidden" name="post" value="<%= post._id %>">
                        <input type="submit" value="Add Comment">
                    </form>
                </div>
            <% } %> 
                <div class="post-comment-<%= post._id %> ">
                    <% for(comment of post.comments){ %>
                        <p><%= comment.content%> </p>
                        <p><%= comment.user.name %> </p>
                    <% } %> 
                </div>
            </div>
        <% } %> 
    </div>

