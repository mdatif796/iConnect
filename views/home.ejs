<link rel="stylesheet" href="/css/home.css">

<div id="feed-container">
    <section id="section-1-posts">
        <% if(locals.user){ %>
            <div id="post-sections">
                <form action="/posts/create-post" id="post-section" method="post">
                    <h2>Post</h2>
                    <textarea name="content" id="content" cols="30" rows="3" placeholder="Type here ..." required></textarea>
                    <input type="submit" value="Add Post">
                </form>
            </div>  
        <% } %>  
            <div id="posts-list-container">
                <% for(post of posts){ %>
                    <!-- move the code of post container into other partials -->
                    <%- include('_post'); -%> 
                <% } %> 
            </div>
    </section>
    
    <section id="section-2-friends">
        <div id="friends">
                <% if(locals.user){ %> 
                    <h2>Friends</h2>
                <% for(u of all_users) { %>
                    <p>
                        <a href="/users/profile/<%= u.id %> "><%= u.name %> </a>
                    </p>
                <% } %>     
            <% } %> 
        </div>
    </section>
    <section>
        <%- include('_chatbox'); -%> 
    </section>
</div>
<script src="/js/home_posts.js"></script>
<script src="/js/home_posts_comment.js"></script>
<script src="/js/likes.js"></script>

